      "item": [
        {
          "name": "Mobile User Authentication",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Basic NTg3NjQwYzk5NWVkM2MwYzU5YjE0NjAwOjg4YmYxY2Q3MGQ=",
                "type": "text"
              },
              {
                "key": "X-Api-Factory-Application-Id",
                "value": "587640c995ed3c0c59b14600",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "username",
                  "value": "{{mobileUsername}}",
                  "type": "text",
                  "description": "Phone number or login",
                  "disabled": false
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "auth"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (!pm.response) { return; }",
                  "try {",
                  "  const jsonData = pm.response.json();",
                  "  const data = jsonData.data || jsonData;",
                  "  const code = data && (data.code || data.auth_code);",
                  "  const smsCode = data && (data.sms_code || data.smsCode);",
                  "  if (code) {",
                  "    pm.environment.set('authCode', code);",
                  "  }",
                  "  if (smsCode) {",
                  "    pm.environment.set('authSmsCode', smsCode);",
                  "  }",
                  "  const usernameField = (pm.request.body && pm.request.body.mode === 'formdata')",
                  "    ? pm.request.body.toJSON().formdata.find((item) => item.key === 'username' && !item.disabled)",
                  "    : null;",
                  "  if (usernameField && usernameField.value) {",
                  "    pm.environment.set('mobileUsername', usernameField.value);",
                  "  }",
                  "  const loginUrl = pm.variables.replaceIn('{{baseUrl}}/api/v1/login');",
                  "  const authHeader = pm.request.headers.get('Authorization');",
                  "  const appIdHeader = pm.request.headers.get('X-Api-Factory-Application-Id');",
                  "  if (code && smsCode && loginUrl && authHeader && appIdHeader) {",
                  "    const loginRequest = {",
                  "      url: loginUrl,",
                  "      method: 'POST',",
                  "      header: [",
                  "        {key: 'Authorization', value: authHeader},",
                  "        {key: 'X-Api-Factory-Application-Id', value: appIdHeader}",
                  "      ],",
                  "      body: {",
                  "        mode: 'formdata',",
                  "        formdata: [",
                  "          {key: 'code', value: code, type: 'text'},",
                  "          {key: 'sms_code', value: smsCode, type: 'text'}",
                  "        ]",
                  "      }",
                  "    };",
                  "    pm.sendRequest(loginRequest, function (err, res) {",
                  "      if (err || !res) {",
                  "        console.log('Auto login request failed', err);",
                  "        return;",
                  "      }",
                  "      try {",
                  "        const loginJson = res.json();",
                  "        const loginToken = loginJson.token || loginJson.access_token;",
                  "        const loginAccessToken = loginToken && (loginToken.accessToken || loginToken.access_token || loginToken);",
                  "        if (loginAccessToken) {",
                  "          pm.environment.set('authToken', loginAccessToken);",
                  "        }",
                  "        const loginRefresh = loginJson.refresh_token || (loginJson.token && loginJson.token.refreshToken);",
                  "        if (loginRefresh) {",
                  "          pm.environment.set('refreshToken', loginRefresh);",
                  "        }",
                  "      } catch (loginErr) {",
                  "        console.log('Unable to parse auto login response', loginErr);",
                  "      }",
                  "    });",
                  "  }",
                  "} catch (err) {",
                  "  console.log('Unable to parse mobile auth response', err);",
                  "}"
                ]
              }
            }
          ]
        },
